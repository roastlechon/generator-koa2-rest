    "rules": {
      "strict": 0,
      "no-param-reassign": 0,
      "no-console": 0,
      "prefer-const": 0,
      "comma-dangle": 0,
      "no-use-before-define": 0,
      "no-underscore-dangle": 0
    }
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-0"
    ],
    "plugins": [
      "add-module-exports",
      "transform-runtime"
    ]
  }
